<h1>New Recipe</h1>

<%= form_with model: @recipe, url: recipes_path do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :preparation_time %>
    <%= form.text_field :preparation_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :cooking_time %>
    <%= form.text_field :cooking_time, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>   
<%= form.submit "Create Recipe", class: 'btn btn-primary' %>
<% end %>
